<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:tk="clr-namespace:TK.CustomMap;assembly=TK.CustomMap"
    xmlns:Controls="clr-namespace:gymlocator.Controls;assembly=gymlocator"
    x:Class="gymlocator.Views.GymMapView"
    Title="{Binding Title}">
    <ContentPage.Content>
        <Grid>
            <tk:TKCustomMap
                Grid.Row="0"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="StartAndExpand"
                x:Name="MyMap"
                IsShowingUser="true"
                MapType="Street" />

            <Controls:MapOverlay
                Grid.Row="0" VerticalOptions="EndAndExpand" HeightRequest="40">
                <Entry
                    Placeholder="Search gyms" />
            </Controls:MapOverlay>
        </Grid>
    </ContentPage.Content>
</ContentPage>