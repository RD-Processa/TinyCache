<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="gymlocator.Views.GymDetailView"
    xmlns:Tr="clr-namespace:TinyTranslations.Forms;assembly=TinyTranslations.Forms"
    xmlns:Controls="clr-namespace:gymlocator.Controls"
    Title="{Binding Title}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout
                Padding="10,20">
                <Label
                    Style="{StaticResource Section}"
                    Text="{Tr:ans Address}" />
                <!--<Label
                    Style="{StaticResource Section}"
                    Text="{Tr:ans Text='Find address' Key='app2an'}" />-->
                <Label
                    Text="{Binding Address}" />
                <StackLayout
                    Orientation="Horizontal">
                    <Label
                        Text="{Binding Zip}" />
                    <Label
                        Text="{Binding City}" />
                </StackLayout>
                <Label
                    Style="{StaticResource Section}"
                    Text="{Tr:ans Features}" />
                <Controls:RepeaterView
                    Padding="0,5"
                    ItemsSource="{Binding Features}">
                    <Controls:RepeaterView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <Label
                                    Style="{StaticResource Strong}"
                                    Text="{Binding Name}" />
                                <Label
                                    Text="{Binding Description}" />
                            </StackLayout>
                        </DataTemplate>
                    </Controls:RepeaterView.ItemTemplate>
                </Controls:RepeaterView>
                <Label
                    Style="{StaticResource Section}"
                    IsVisible="{Binding HasPT}"
                    Text="{Tr:ans Personal trainers}" />
                <Controls:RepeaterView
                    Padding="0,5"
                    IsVisible="{Binding HasPT}"
                    ItemsSource="{Binding PersonalTrainers}">
                    <Controls:RepeaterView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <Label
                                    Style="{StaticResource Strong}"
                                    Text="{Binding Name}" />
                                <Label
                                    Text="{Binding Email}" />
                            </StackLayout>
                        </DataTemplate>
                    </Controls:RepeaterView.ItemTemplate>
                </Controls:RepeaterView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>