<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="gymlocator.Controls.DrawerControl">
    <ContentView.Content>
        <StackLayout
            BackgroundColor="#33eeeeee"
            Padding="10">
            <Entry
                Placeholder="Search gyms" Focused="Handle_Focused" TextChanged="Handle_TextChanged" />
            <ListView
                BackgroundColor="Transparent"
                x:Name="gymlist"
                ItemSelected="Handle_ItemSelected"
                SeparatorColor="#cccccccc"
                ItemsSource="{Binding Gyms}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid 
                                BackgroundColor="Transparent"
                                Padding="10,5">
                                <Label Grid.Row="0" Grid.Column="0"
                                    Text="{Binding Name}" />
                                <Label Grid.Row="1" Grid.Column="0"
                                    Text="{Binding Description}" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentView.Content>
</ContentView>